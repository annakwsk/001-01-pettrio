            <a href="index-13.html"><i></i> </a>
            <div class="t-layout__heading-title">アカウント登録 ご確認</div>
          </div>
          <!-- /heading -->

          <main class="p-request">
            <div class="p-request__progress">
              <div class="p-request__progress-caption">100%完了</div>
