<!DOCTYPE html>
<html lang="ja">
  <% const baseMeta = {title: 'リクエスト'} %>
  <head>
    <%- include("../_head", {baseMeta: baseMeta}); %>
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K3K63C" height="0" width="0" style="display: none; visibility: hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="wrapper t-layout">
      <div class="t-layout__inner">
        <%- include("../_header"); %>
        <div class="t-layout__content">
          <!-- heading -->
          <div class="t-layout__heading">
            <a href="index.html"><i></i></a>
            <div class="t-layout__heading-title">条件リクエスト</div>
          </div>
          <!-- /heading -->

          <main class="p-request">
            <div class="p-request__progress">
              <div class="p-request__progress-caption">20%完了</div>
              <progress max="100" value="20"></progress>
            </div>
            <div class="p-request__main">
              <div class="p-request__title">犬種サイズ</div>
              <ul class="p-request__radio">
                <li>
                  <label><input type="radio" name="犬種サイズ" value="大型犬" class="js-radio-02" />大型犬</label>
                </li>
                <li>
                  <label><input type="radio" name="犬種サイズ" value="中型犬" class="js-radio-02" />中型犬</label>
                </li>
                <li>
                  <label><input type="radio" name="犬種サイズ" value="小型犬" class="js-radio-02" />小型犬</label>
                </li>
                <li>
                  <label><input type="radio" name="予犬種サイズ" value="超小型犬" class="js-radio-02" />超小型犬</label>
                </li>
              </ul>
            </div>

            <div class="p-request__button">
              <div class="p-request__back">
                <a href="index.html"> 前にもどる </a>
              </div>
              <div class="a-button--type1 p-request__next">
                <a href="index-03.html"> 次へ </a>
              </div>
            </div>
          </main>
        </div>
        <%- include("../_footer"); %>
      </div>
    </div>
  </body>
</html>
